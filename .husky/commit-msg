status=$?

if [ $status -ne 0 ]; then
  echo
  echo "âŒ Conventional Commits required: <type>(scope?): <subject>"
  echo "   types: feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert"
  exit $status
